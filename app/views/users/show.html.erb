<div class="mainContainer">
  <div class="pageTitle userShow">マイページ</div>
  <div class="container userShow">
      <div class="userShow-title">プロフィール</div>
      <div class="form view userShow">
        <table>
          <tr>
            <th>
              <%= image_tag @user.icon.thumb.url if @user.icon.present? %>
            </th>
            <td>
              <table class="detail_profile">
                <tr>
                  <th>名前</th>
                  <td><%= @user.name %></td>
                </tr>
                <tr>
                  <th>メールアドレス</th>
                  <td><%= @user.email %></td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
        <div class="page-link toEditProfile">
        <%= link_to "プロフィール編集", edit_user_path, class: 'btn btn-warning'  %>
        </div>
      </div>

      <div class="userSponsorShow-title">主催イベント<i class="fas fa-angle-double-down"></i></div>
      <div class="form view userSponsorShow">
        <table>
          <% current_user.events.each do |event| %>
            <tr>
              <th class="event_title"><%= event.title %></th>
              <td><%= link_to event_path(event.id), class: 'btn btn-info' do %>イベント詳細<i class="fa fa-angle-double-right"></i><% end %></td>
            </tr>
          <% end %>
        </table>
      </div>

      <div class="userParticipantShow-title">参加イベント<i class="fas fa-angle-double-down"></i></div>
      <div class="form view userParticipantShow">
        <table>
          <% current_user.participant_events.each do |event| %>
            <tr>
              <th class="event_title"><%= event.title %></th>
              <td><%= link_to event_path(event.id), class: 'btn btn-info' do %>イベント詳細<i class="fa fa-angle-double-right"></i><% end %></td>
            </tr>
          <% end %>
        </table>
      </div>
  </div>
  <div class="page-link toEventIndex">
    <%= link_to events_path, class: 'btn btn-default' do %><i class="fas fa-angle-double-left"></i>開催イベント一覧<% end %>
  </div>
</div>
