<div class="mainContainer">
  <div class="pageTitle userRegister">新規登録</div>
  <div class="container userRegister">

    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %>
         prohibited this @user from being saved:
      </h2>
      <% @user.errors.full_messages.each do |msg| %>
      <ul>
        <li><%= msg %></li>
      </ul>
      <% end %>
    </div>
    <% end %>

    <div class="form submit userRegister">
      <%= form_with(model: @user, local: true) do |f| %>
      <table>
        <tr>
          <th><%= f.label "名前" %></th>
          <td><%= f.text_field :name, class:'name', placeholder: '30字以内' %></td>
        </tr>
        <tr>
          <th><%= f.label "メールアドレス" %></th>
          <td><%= f.email_field :email, class:'email', placeholder: '255字以内' %></td>
        </tr>
        <tr>
          <th><%= f.label "パスワード" %></th>
          <td><%= f.password_field :password, class:'password', placeholder: '6〜20字' %></td>
        </tr>
        <tr>
          <th><%= f.label "パスワード(再入力)" %></th>
          <td><%= f.password_field :password_confirmation, class:'password_confirmation', placeholder: '6〜20字' %></td>
        </tr>
      </table>
      <div class="page-link toUserProfile">
        <%= f.submit "新規登録", class: 'btn btn-warning'%>
      </div>
      <% end %>
    </div>

  </div>
</div>
