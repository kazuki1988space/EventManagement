<div class="mainContainer">
  <h2 class="pageTitle newQuestion">問合せフォーム</h2>
  <div class="container newQuestion">
    <div class="form submit newEvent">
      <%= form_with(model: @question, url: confirm_questions_path, local: true) do |form| %>

      <% if @question.errors.any? %>
      <div class="error_explanation">
          <h2><%= @question.errors.count %>件のエラーがあります。</h2>
          <ul>
              <% @question.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
          </ul>
      </div>
      <% end %>

      <table>
        <tr>
          <th><%= form.label :タイトル %></th>
          <td><%= form.text_field :title %></td>
        </tr>
        <tr>
          <th><%= form.label :問合せ内容 %></th>
          <td><%= form.text_area :content %></td>
        </tr>
      </table>

      <div class="page-link toConfirmQuestion">
        <%= form.submit "作成", class: 'btn btn-warning' %>
      </div>

      <% end %>
    </div>

    <div class="page-link toEventIndex">
    <%= link_to "<< イベント一覧", events_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
